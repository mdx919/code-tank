					<!-- javascript -->
					<script>
						$(document).ready(function(){

							// js function for moving the background image
							// var i = null;
							// function move() {
							// 	i++;
							// 	document.getElementById("clouds").style.backgroundPosition = i +'px';
							// 	window.setInterval(move, 30);

							// }    

							$(function(){
    							var x = 0;
    							setInterval(function(){
        						x-=1;
        						$('clouds').css('background-position', x + 'px 0');
    							}, 10);
							})
        					
        					// zombie waking and walking animation
							var gamestart = false;
							var count = 1;
							
							setInterval(function(e){
								
									$('.waking').attr('src', "zombie/pop" + count + ".png");
									count++;
									if(count == 13) {
										gamestart = true;
									}
								
							}, 500);

							
							var time = 0;
							setInterval(function(e){
								if(gamestart == true){
									$('.waking').attr('src', "zombie/Walk" + time + ".png");
									time++;
										if(time == 12){
										time = 0;
										}
								}
							}, 100);

						});
					</script>
