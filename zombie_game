        					// $(".skyimg").animate({backgroundPosition: '-100px 0'});
							var gamestart = false;
							var count = 1;
							
							setInterval(function(e){
								
									$('.waking').attr('src', "zombie/pop" + count + ".png");
									count++;
									if(count == 13) {
										gamestart = true;
									}
								
							}, 500);

							
							var time = 0;
							setInterval(function(e){
								if(gamestart == true){
									$('.waking').attr('src', "zombie/Walk" + time + ".png");
									time++;
										if(time == 12){
										time = 0;
										}
								}
							}, 100);

						});
					</script>
